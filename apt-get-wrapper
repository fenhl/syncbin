#/bin/bash

if ! (which apt-get &> /dev/null); then
    exit 2
fi

PACKAGES=$(apt-get upgrade -s | grep '^Inst' | wc -l)

if [ ${PACKAGES} != "0" ]; then
    if [ ${PACKAGES} = "1" ]; then
        UPDATES='update'
    else
        UPDATES='updates'
    fi
    echo '[dpkg]' ${PACKAGES} ${UPDATES} available
fi
