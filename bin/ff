#!/bin/sh

# If any arguments are given, opens the first one in a new Firefox tab.
# Otherwise, reads HTML from standard input and sends it to Firefox.

if [ $# -eq 0 ]; then
    tmpfile=$(mktemp /tmp/syncbin-firefox.XXXXXX)
    cat > "$tmpfile"
    firefox-tab "$tmpfile"
    sleep 3
    rm "$tmpfile"
else
    firefox-tab "$1"
fi
